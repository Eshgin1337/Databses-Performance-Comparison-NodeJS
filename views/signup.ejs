            <input type="password" id="confirmedInputPassword" class="form-control" name="confirmation" placeholder="Confirm Password" required="">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button> <br>
            <p class="link">Already have account?    <a href="/login">Sign in</a></p>
            
